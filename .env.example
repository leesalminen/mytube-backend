# Server
PORT=8080
NODE_ENV=production

# Database (SQLite by default)
DATABASE_URL="file:./dev.db"

# S3 / MinIO
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.example.com
S3_BUCKET=mytube
S3_PATH_STYLE=false
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
PRESIGN_TTL_SECONDS=600

# Free trial (optional)
